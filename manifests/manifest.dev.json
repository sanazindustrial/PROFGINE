{
  "manifest_version": 3,
  "name": "Professor GENIE (Dev)",
  "version": "0.1.0",
  "description": "AI-powered grading assistant for educational platforms (Development)",
  "permissions": ["storage", "activeTab", "scripting"],
  "host_permissions": ["https://*/*", "http://localhost:3000/*"],
  "content_scripts": [{
    "matches": ["https://*/*", "http://localhost:3000/*"],
    "js": ["contentScript.js"],
    "run_at": "document_idle"
  }],
  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  },
  "icons": {
    "16": "icons/16.png",
    "48": "icons/48.png",
    "128": "icons/128.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/16.png",
      "48": "icons/48.png",
      "128": "icons/128.png"
    }
  }
}
