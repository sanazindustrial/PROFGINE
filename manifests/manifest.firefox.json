{
  "manifest_version": 2,
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "browser_action": {
    "default_popup": "popup.html",
    "default_title": "ProfGini Assistant",
    "default_icon": {
      "16": "icons/icon-16.png",
      "32": "icons/icon-32.png",
      "48": "icons/icon-48.png",
      "128": "icons/icon-128.png"
    }
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "profgini@profgini.com",
      "strict_min_version": "109.0",
      "update_url": "https://api.profgini.com/extension/firefox/updates.json"
    }
  },
  "commands": {
    "toggle-assistant": {
      "suggested_key": {
        "default": "Ctrl+Shift+P"
      },
      "description": "Toggle ProfGini Assistant"
    },
    "quick-grade": {
      "suggested_key": {
        "default": "Ctrl+Shift+G"
      },
      "description": "Quick Grade Assignment"
    }
  },
  "applications": {
    "gecko": {
      "id": "profgini@profgini.com",
      "strict_min_version": "109.0"
    }
  }
}
