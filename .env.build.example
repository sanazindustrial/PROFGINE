# ProfGini Browser Extension Environment Configuration
# Copy this to .env.build and set appropriate values

# Required: Backend API URLs (must match CORS settings and manifest host permissions)
EXT_API_BASE_URL=https://profgini.com
EXT_APP_BASE_URL=https://profgini.com

# Environment (development, staging, production)
EXT_ENV=production

# OAuth Configuration (optional - only if needed for direct extension OAuth)
EXT_GOOGLE_CLIENT_ID=
CHROME_OAUTH_CLIENT_ID=
FIREFOX_OAUTH_CLIENT_ID=

# Store-specific Extension Keys (for development/updates only)
CHROME_EXTENSION_KEY=
EDGE_EXTENSION_KEY=
OPERA_EXTENSION_KEY=

# Firefox Add-on ID (required for AMO)
FIREFOX_EXTENSION_ID=profgenie@profgenie.ai

# Feature Flags (true/false)
EXT_FEATURE_AI_GRADING=true
EXT_FEATURE_DISCUSSION=true
EXT_FEATURE_BULK_GRADING=true
EXT_FEATURE_PLAGIARISM=false
EXT_FEATURE_ANALYTICS=true

# Security Settings
EXT_SECURITY_AUDIT_LOGS=true
EXT_SECURITY_HTTPS=true
EXT_TOKEN_REFRESH_MINUTES=30

# Analytics Keys (per store if needed)
EXT_ANALYTICS_KEY=
EXT_ANALYTICS_KEY_CHROME=
EXT_ANALYTICS_KEY_FIREFOX=
EXT_ANALYTICS_KEY_EDGE=
EXT_ANALYTICS_KEY_OPERA=
EXT_ANALYTICS_KEY_SAFARI=

# Store-specific configurations
CHROME_WEB_STORE_DEVELOPER_KEY=
FIREFOX_JWT_ISSUER=
FIREFOX_JWT_SECRET=
EDGE_PRODUCT_ID=
OPERA_PACKAGE_ID=

# Development/Testing
EXT_DEBUG_MODE=false
EXT_SKIP_STORE_VALIDATION=false